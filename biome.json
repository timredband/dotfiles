{
  "$schema": "https://biomejs.dev/schemas/2.0.0-beta.5/schema.json",
  "html": {
    "formatter": {
      "enabled": true,
      "selfCloseVoidElements": "never",
      "indentScriptAndStyle": true
    }
  },
  "css": {
    "formatter": {
      "enabled": true,
      "indentStyle": "space"
    }
  },
  "javascript": {
    "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "indentWidth": 4
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space"
  },
  "linter": {
    "enabled": false
  }
}
